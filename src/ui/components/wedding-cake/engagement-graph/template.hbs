<div class="dashboard__sub-numbers">
    <div class="dashboard__sub-numbers--graph">
      <svg class="chart">
          <g>
              <rect
                  class="background"
                  width="100%"
                  height="100%"
                  y="50"
              ></rect>

              <rect
                  class="bar"
                  height="100%"
                  width="{{weightedEngagementNumber.weighted}}%"
                  y="50"
              ></rect>

              <text
                x="{{weightedEngagementNumber.textPosition}}%"
                y="90"
              >
                {{weightedEngagementNumber.value}}
                </text>
          </g>

            <g>
                {{#each weightedMilestones key="@index" as |milestone|}}
                    <line
                        x1="{{milestone.weighted}}%"
                        x2="{{milestone.weighted}}%"
                        y1="0"
                        y2="100%"
                    ></line>

                    <text
                        x="{{milestone.textPosition}}%"
                        y="40"
                        font-family="sans-serif"
                        font-size="48px"
                    >
                        {{milestone.value}}
                    </text>
                {{/each}}
            </g>
      </svg>
    </div>
  </div>
